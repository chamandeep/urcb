<p id="notice"><%= notice %></p>
<p> <%= @user.firstName%> </p>
    <% if @user.Posts.any? %>
      <h3>Microposts (<%= @user.Posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>

<p>
  <strong>Firstname:</strong>
   <%= @user.firstName %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @user.lastName %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<p>
  <strong>Usertype:</strong>
  <%= @user.userType %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @user.dob %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<%= link_to "Edit your profile", edit_user_path(current_user) %>

