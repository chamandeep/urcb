<h1>Listing users</h1>
<%= will_paginate %>
<p> </p>
<ul>
	<% @users.each do |user| %>
	<li> <%= link_to user.full_name, user %>
		  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>

		 </li>
	
	<% end %>
			</ul>
