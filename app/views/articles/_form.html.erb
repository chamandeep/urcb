<%= form_for(@article) do |f| %>
<%= render 'layouts/errorMessages', object: f.object %>
  
    <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <div class="field">
    <%= f.label :title, "Title:"  %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :articleText, "Article Text:" %>
    <%= f.text_area :articleText %>
  </div>
  
    <%= f.hidden_field :Status, :value => "1" %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
