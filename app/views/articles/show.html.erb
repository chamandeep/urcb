<p id="notice"><%= notice %></p>
<h1> <%= @article.title %></h1>
<% if @article.Status < 3 %>
<%= render 'approve' %>
<% else %>
<%= render 'reject' %>
<% end %>
<p>
	Authored by <%= link_to @article.user.full_name, @article %> <br />
Published on <%= @article.updated_at %>
</p>
<p>
	<%= @article.articleText %>
</p>
<% if current_user?(@article.user) %>
<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>
