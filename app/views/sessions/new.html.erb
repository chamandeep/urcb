<h1>User login</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
  <p>
    <%= f.label :email, "Email Address:" %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Login" %>
  </p>
<% end %>
    <p>New user? <%= link_to "Register now!", User.new %></p>