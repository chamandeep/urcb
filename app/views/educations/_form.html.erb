<%= form_for(@education) do |f| %>
<%= render 'layouts/errorMessages', object: f.object %>


<%= f.hidden_field :user_id, :value => current_user.id %>    
  
  <div class="field">
    <%= f.label :course_id, "Course:" %><br>
    <%= f.collection_select(:course_id, Course.all, :id, :name, {prompt: "please select a course"} ) %>
  </div>
  <div class="field">
    <%= f.label :university_id, "University:" %><br>
    <%= f.collection_select(:university_id, University.all, :id, :name, {prompt: "please select a university"} ) %>
  </div>
  <div class="field">
    <%= f.label :startDate, "Start date:" %><br>
    <%= f.date_select :startDate %>
  </div>
  <div class="field">
    <%= f.label :endDate, "End date:" %><br>
    <%= f.date_select :endDate %>
  </div>
  <div class="field">
    <%= f.label :accessibilityReview, "Accessibility Review:" %><br>
    <%= f.text_area :accessibilityReview %>
  </div>
  <div class="field">
    <%= f.label :supportRequested, "Support Requested:" %><br>
    <%= f.text_area :supportRequested %>
  </div>
  <div class="field">
    <%= f.label :supportReceived, "Did you receive this support?" %><br>
    <%= f.check_box :supportReceived %>
  </div>
  <div class="field">
    <%= f.label :reason, "If not, what were the reasons?" %><br>
    <%= f.text_area :reason %>
  </div>
  <div class="field">
  	<fieldset>
  		<legend>Disability department rating from 1 to 5: (Where 1 is very poor and 5 is very good.)</legend>
  		  		<%= f.label :disabilityDeptRating, "1", :value => "1" %>
<%= f.radio_button :disabilityDeptRating, "1" %>

<%= f.label :disabilityDeptRating, "2", :value => "2" %>
<%= f.radio_button :disabilityDeptRating, "2" %>

<%= f.label :disabilityDeptRating, "3", :value => "3" %>
<%= f.radio_button :disabilityDeptRating, "3" %>

<%= f.label :disabilityDeptRating, "4", :value => "4" %>
<%= f.radio_button :disabilityDeptRating, "4" %>

<%= f.label :disabilityDeptRating, "5", :value => "5" %>
<%= f.radio_button :disabilityDeptRating, "5" %>  		
  	</fieldset>
      </div>
  <div class="field">
      	<fieldset>
  		<legend>Course department rating from 1 to 5: (Where 1 is very poor and 5 is very good.)</legend>
  		<%= f.label :courseDeptRating, "1", :value => "1" %>
<%= f.radio_button :courseDeptRating, "1" %>

<%= f.label :courseDeptRating, "2", :value => "2" %>
<%= f.radio_button :courseDeptRating, "2" %>

<%= f.label :courseDeptRating, "3", :value => "3" %>
<%= f.radio_button :courseDeptRating, "3" %>

<%= f.label :courseDeptRating, "4", :value => "4" %>
<%= f.radio_button :courseDeptRating, "4" %>

<%= f.label :courseDeptRating, "5", :value => "5" %>
<%= f.radio_button :courseDeptRating, "5" %>  		
  	</fieldset>
      </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
